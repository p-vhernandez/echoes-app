<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/subsection_title"
        style="@style/EchoesCreationSubsection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_a_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selected_date"
        style="@style/Echoes.Date.Selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subsection_title"
        android:layout_marginTop="5dp"
        android:text="@string/example_date" />

    <CalendarView
        android:id="@+id/calendar"
        android:theme="@style/Echoes.Date.Calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selected_date"
        android:weekDayTextAppearance="@style/Echoes.Date.Calendar.Weekday"
        android:layout_marginTop="40dp"
        android:visibility="visible"/>

</RelativeLayout>