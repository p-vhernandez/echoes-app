<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <EditText
        android:id="@+id/title_input"
        style="@style/Echoes.Text.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drw_input_background_title"
        android:inputType="text"
        android:textColor="@color/label_active"
        android:textColorHint="@color/label_gray_80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/description_input"
        style="@style/Echoes.Text.Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/drw_input_background_description"
        android:gravity="start"
        android:inputType="text"
        android:textColor="@color/label_active"
        android:textColorHint="@color/label_gray_80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_input" />

</androidx.constraintlayout.widget.ConstraintLayout>