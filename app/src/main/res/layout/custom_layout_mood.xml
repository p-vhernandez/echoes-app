<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mood_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/drw_mood_unselected"
        android:contentDescription="@string/mood_image"
        android:padding="15dp"
        android:src="@drawable/ic_mood_happy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mood_name"
        style="@style/EchoesMoodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Happy"
        app:layout_constraintEnd_toEndOf="@id/mood_image"
        app:layout_constraintStart_toStartOf="@id/mood_image"
        app:layout_constraintTop_toBottomOf="@id/mood_image" />

</androidx.constraintlayout.widget.ConstraintLayout>