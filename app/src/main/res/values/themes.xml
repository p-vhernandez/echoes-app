    <style name="Echoes.Date.Selected" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/label_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Echoes.Date.Calendar" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/label_active</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

    <style name="Echoes.Date.Calendar.Day" parent="TextAppearance.AppCompat">
