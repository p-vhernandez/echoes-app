    <style name="Theme.Echoes" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/blue_accent</item>
        <item name="colorPrimaryVariant">@color/blue_accent_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_accent</item>
        <item name="colorSecondaryVariant">@color/putple_accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.Echoes.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Echoes.ActionBarStyle" parent="Theme.MaterialComponents.Light">
        <item name="backgroundColor">@color/white</item>
        <item name="elevation">0dp</item>
        <item name="android:titleTextStyle">@style/Echoes.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Echoes.BottomNavigationBar" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@drawable/drw_tab_color</item>
        <item name="itemTextColor">@drawable/drw_tab_color</item>
    </style>

    <style name="Echoes.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/inter_extra_bold</item>
    </style>

    <style name="EchoTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="EchoDate" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Echoes.Audio.Guidance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="EchoLocation" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="MainButtonStyle.MainButtonText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="Echoes.MainButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/blue_accent</item>
        <item name="android:radius">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="EchoesAppName" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/inter_extra_bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Echoes.Premium.Call" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/inter_extra_bold</item>
    </style>

    <style name="Echoes.Premium.Price" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/purple_accent</item>
        <item name="android:textSize">44sp</item>
        <item name="fontFamily">@font/inter_extra_bold</item>
    </style>

    <style name="Echoes.Premium.Cancel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Echoes.SecondaryButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/purple_accent</item>
        <item name="android:radius">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="Echoes.Label.Unselected" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/label_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Echoes.Label.Selected" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Echoes.Splash.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/splash_text</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/inter_light</item>
    </style>

    <style name="EchoesCreationSubsection" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="EchoesMoodLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/label_mood_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="Echoes.IconButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/bg_gray</item>
        <item name="android:radius">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/label_active</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableRight">@drawable/ic_chevron_down</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="Echoes.Location.Search" parent="Widget.AppCompat.EditText">
        <item name="android:drawableStart">@drawable/ic_search_location</item>
        <item name="android:padding">5dp</item>
        <item name="hintTextAppearance">@style/Echoes.Location.Search.Hint</item>
        <item name="textInputStyle">@style/Echoes.Location.Search.Input</item>
        <item name="hintTextColor">@color/splash_text</item>
        <item name="android:textColor">@color/label_active</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Echoes.Location.Search.Hint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/splash_text</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="Echoes.Location.Search.Input" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/label_active</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

